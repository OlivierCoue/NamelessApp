<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_start_sky_night"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/night_bottom">

    <LinearLayout
        android:background="@color/night_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:weightSum="3">

        <View
            android:background="@drawable/background_gradient_night"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/stars_imageview"
            android:src="@drawable/background_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:weightSum="3">

        <View
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:id="@+id/night_hills"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="67"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/night_hills_img"
                android:background="@drawable/background_hills_night"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:contentDescription="Lol"/>

            <View
                android:background="@color/night_hills"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/night_hills_img" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>