<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_start_sky_night"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/night_bottom"
    android:weightSum="100">

    <RelativeLayout
        android:background="@drawable/background_gradient_night"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="33"
        android:gravity="center">

        <ImageView
            android:src="@drawable/background_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/night_hills"
        android:background="@color/night_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="67"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/night_hills_img"
            android:background="@drawable/background_hills_night"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:contentDescription="Lol"/>

        <View
            android:background="@color/night_hills"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/night_hills_img" />

    </RelativeLayout>

</LinearLayout>