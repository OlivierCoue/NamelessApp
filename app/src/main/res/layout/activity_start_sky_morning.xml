<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_start_sky_morning"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/morning_bottom"
    android:weightSum="100">

    <LinearLayout
        android:background="@drawable/background_gradient_morning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33"
        android:gravity="center"/>


    <RelativeLayout
        android:id="@+id/morning_hills"
        android:background="@color/morning_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="67"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/morning_hills_img"
            android:background="@drawable/background_hills_morning"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:contentDescription="Lol"/>

        <View
            android:background="@color/morning_hills"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/morning_hills_img" />

    </RelativeLayout>

</LinearLayout>