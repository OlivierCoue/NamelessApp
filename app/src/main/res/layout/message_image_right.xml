<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/message_container.right">

    <LinearLayout
        android:id="@+id/message_top_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/message_container_top"
        android:gravity="end"
        android:visibility="gone">

        <TextView
            android:id="@+id/message_top_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/message_container_top_date"/>

        <TextView
            android:id="@+id/message_top_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/message_container_top_username.right" />

    </LinearLayout>

    <ImageView
        android:id="@+id/message_image"
        android:contentDescription="@string/image_message"
        style="@style/message_content.imageRight" />
</LinearLayout>