<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activies.StartActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingTop="25dp"
            android:orientation="vertical">

            <ImageView
                android:background="@mipmap/logo_nameless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logoNameless"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                android:text="Setup your chat"
                android:id="@+id/textStartNameless"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your secret identity"
                android:textColor="#FFFFFF"
                android:textColorHint="#BFFFFFFF"
                android:textSize="16dp"
                android:maxLines="1"
                android:singleLine="true"
                android:background="@drawable/edit_text_nameless"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16dp"
                android:textColor="#BFFFFFFF"
                android:text="Select a range" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="@color/colorPrimaryDark">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/seekbar_gradient_layout"
                            android:layout_width="100dp"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF"></RelativeLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:gravity="left"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/range_seekbar_gradient"></RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginTop="-25dp"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/view"
                            android:background="@color/colorPrimary"></RelativeLayout>

                        <com.oliviercoue.httpwww.nameless.ui.FontButton
                            android:text="@string/icon_seekbar_sofa"
                            style="@style/start_gradient_button"
                            android:layout_centerInParent="true"
                            android:id="@+id/view" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/view"
                            android:background="@color/colorPrimary"></RelativeLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:background="@color/colorPrimary"
                            android:layout_toEndOf="@+id/view2"></RelativeLayout>

                        <com.oliviercoue.httpwww.nameless.ui.FontButton
                            android:text="@string/icon_seekbar_walk"
                            style="@style/start_gradient_button"
                            android:layout_centerInParent="true"
                            android:id="@+id/view2" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:background="@color/colorPrimary"
                            android:layout_toStartOf="@+id/view2"></RelativeLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:background="@color/colorPrimary"
                            android:layout_toEndOf="@+id/view3"></RelativeLayout>

                        <com.oliviercoue.httpwww.nameless.ui.FontButton
                            android:text="@string/icon_seekbar_car"
                            style="@style/start_gradient_button"
                            android:layout_centerInParent="true"
                            android:id="@+id/view3" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:background="@color/colorPrimary"
                            android:layout_toStartOf="@+id/view3"></RelativeLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:background="@color/colorPrimary"
                            android:layout_toEndOf="@+id/view4"></RelativeLayout>

                        <com.oliviercoue.httpwww.nameless.ui.FontButton
                            android:text="@string/icon_seekbar_world"
                            style="@style/start_gradient_button"
                            android:layout_centerInParent="true"
                            android:id="@+id/view4" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:background="@color/colorPrimary"
                            android:layout_toStartOf="@+id/view4"></RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <SeekBar
                android:layout_marginTop="32px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="34"
                android:id="@+id/range_seekbar"
                android:layout_gravity="center_horizontal"
                android:progressTint="#FFFFFF"
                android:thumbTint="#FFFFFF"
                android:foregroundTint="#80000000"
                android:thumb="@drawable/seekbar_thumb" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:id="@+id/closefriendnb_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true">

                    <TextView
                        android:textColor="#FFFFFF"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="about " />

                    <TextView
                        android:textColor="#FFFFFF"
                        android:textSize="16dp"
                        android:id="@+id/range_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0" />

                    <TextView
                        android:textColor="#FFFFFF"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" km - " />

                    <TextView
                        android:textColor="#FFFFFF"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/close_friend_nb" />

                    <TextView
                        android:textColor="#FFFFFF"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" people online" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/start_chat_button"
                style="?android:textAppearanceSmall"
                android:layout_gravity="center"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="Start chat"
                android:background="@drawable/start_button"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:layout_below="@+id/start_chat_button">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nameless &#169; 2016"
                        android:textColor="#BFFFFFFF"
                        android:textSize="12dp"/>

                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
