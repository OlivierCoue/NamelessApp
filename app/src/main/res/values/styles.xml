<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/NamelessActionBar</item>
        <item name="actionBarStyle">@style/NamelessActionBar</item>
        <item name="android:homeAsUpIndicator">@mipmap/close</item>
    </style>

    <style name="NamelessActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/LineRemover</item>
        <!-- For Android 3.x. and above -->
        <item name="android:background">@drawable/actionbar_background</item>
        <!-- For Android 2.3.x -->
        <item name="background">@drawable/actionbar_background</item>
    </style>

    <style name="LineRemover" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="start_gradient_button">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@null</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="range_text_bottom">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="message_button">
        <item name="android:layout_width">53dp</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">21sp</item>
        <item name="android:background">@null</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="message_button.send">
        <item name="android:layout_width">40dp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="message_button.take">
        <item name="android:layout_width">40dp</item>
        <item name="android:textColor">#54000000</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="message_button.choose">
        <item name="android:textColor">#54000000</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="android:shape">rectangle</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="button.start">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="button.search">
        <item name="android:backgroundTint">@color/lightGrey</item>
        <item name="android:tint">@color/lightGrey</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="button.next">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:layout_width">185dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button.transparent">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="message_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">280dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="message_container.left">
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="message_container.right">
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="message_container_top">
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="message_container_top_username">
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="message_container_top_username.left">
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="message_container_top_username.right">
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="message_container_top_date">
        <item name="android:textColor">#909090</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="message_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Sample text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:maxWidth">480dp</item>
    </style>

    <style name="message_content.left">
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/message_text_view_left</item>
        <item name="android:textColor">#444444</item>
        <item name="android:layout_marginRight">54dp</item>
    </style>

    <style name="message_content.right">
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@drawable/message_text_view_right</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginLeft">54dp</item>
    </style>

    <style name="message_content.imageLeft">
        <item name="android:layout_gravity">left</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginRight">54dp</item>
    </style>

    <style name="message_content.imageRight">
        <item name="android:layout_gravity">right</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">54dp</item>
    </style>
</resources>
