<resources>
    <!-- BASE APP THEME -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- APP THEME -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/NamelessActionBar</item>
        <item name="actionBarStyle">@style/NamelessActionBar</item>
        <item name="android:homeAsUpIndicator">@mipmap/close</item>
    </style>

    <!-- THEME -->
    <style name="StartActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/NamelessActionBar</item>
        <item name="actionBarStyle">@style/NamelessActionBar</item>
        <item name="android:homeAsUpIndicator">@mipmap/close</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppThemeMultiTask" parent="Theme.AppCompat.Light">

    </style>

    <!-- CUSTOM ACTION BAR -->

    <style name="NamelessActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="background">@drawable/actionbar_background</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- USERNAME INPUT-->
    <style name="username_input" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white75</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="range_text_bottom">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="message_button">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="message_button.send">
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="message_button.take">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="message_button.choose">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="button" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/grey</item>
        <item name="colorButtonNormal">@color/lightGrey</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="button.start">
        <item name="colorControlHighlight">@color/lightGrey</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="button.search">
        <item name="colorControlHighlight">@color/grey</item>
        <item name="colorButtonNormal">@color/lightGrey</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="button.next">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button.transparent">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="message_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">280dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="message_container.left">
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="message_container.right">
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="message_container_top">
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="message_container_top_username">
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="message_container_top_username.left">
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="message_container_top_username.right">
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="message_container_top_date">
        <item name="android:textColor">#909090</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="message_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Sample text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:maxWidth">480dp</item>
    </style>

    <style name="message_content.left">
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/message_text_view_left</item>
        <item name="android:textColor">#444444</item>
        <item name="android:layout_marginRight">54dp</item>
    </style>

    <style name="message_content.right">
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@drawable/message_text_view_right</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginLeft">54dp</item>
    </style>

    <style name="message_content.imageLeft">
        <item name="android:layout_gravity">left</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginRight">54dp</item>
    </style>

    <style name="message_content.imageRight">
        <item name="android:layout_gravity">right</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">54dp</item>
    </style>

    <style name="NamelessTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
