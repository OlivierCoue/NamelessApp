<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:textSize="16dp">
        <shape android:shape="rectangle" >
            <solid
                android:color="#FFFFFF"
                />
            <padding
                android:left="@dimen/chat_composer_padding"
                android:top="@dimen/chat_composer_padding"
                android:right="@dimen/chat_composer_padding"
                android:bottom="@dimen/chat_composer_padding"
                />
            <corners android:radius="@dimen/chat_radius"/>
        </shape>
    </item>
</layer-list>